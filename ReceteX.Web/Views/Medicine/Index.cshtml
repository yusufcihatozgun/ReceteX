@{
    ViewData["Title"] = "İlaç Listesi";
}

<div>
    <div class="card">
        <div class="card-header text-white bg-success bg-gradient">
            <span class="fs-4">İlaç Listesi</span>
            <a href="#" id="btnGuncelle" onclick="updateMedicines()" class="btn btn-warning ms-2">Güncelle</a>
        </div>
        <div class="card-body">
            <table id="tblMedicines" class="table table-bordered table-striped" style="width:100%">
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var DataTable;

        $(document).ready(function () {
            DataTable = $('#tblMedicines').DataTable({
                ajax: '/Medicine/GetAll',
                columns: [
                    { data: 'id', title: "Id" },
                    { data: 'name', title: "Ad" },
                    { data: 'barcode', title: 'Barkod' }
                ]
            });
        });

        function updateMedicines() {
            $.ajax({
                type: 'GET',
                url: '/Medicine/Update',
                success: function (res) {
                    toastr.success("İlaçlar başarıyla güncellendi");
                    DataTable.ajax.reload();    
                },
                error: function (xhr, status, error) {
                    toastr.error("İlaç güncelleme hatası: " + error);
                }
            });
        }
    </script>
}

