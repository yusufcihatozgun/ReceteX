<div>
    <div class="card">
        <div class="card-header text-white bg-success bg-gradient">
            <span class="fs-4">İlaç Listesi</span>
            <a asp-action="UpdateMedicinesList" asp-controller="Medicine" id="btnGuncelle" class="btn btn-warning ms-2">Listeyi Güncelle</a>
        </div>
        <div class="card-body">
            <table id="tblMedicines" class="table table-bordered table-striped" style="width:100%">
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var DataTable;

        $(document).ready(function () {
            DataTable = $('#tblMedicines').DataTable({
                ajax: '/Medicine/GetAll',
                columns: [
                    { data: 'id', title: "Id" },
                    { data: 'name', title: "Ad" },
                    { data: 'barcode', title: 'Barkod' }
                ]
            });
        });
    </script>
}

